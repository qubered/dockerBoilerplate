# Example environment file for Authentik
# Copy this file to .env and update the values below

# PostgreSQL database password
PG_PASS=your_postgresql_password_here

# Authentik secret key - generate a secure random string
# You can generate one with: openssl rand -base64 60
AUTHENTIK_SECRET_KEY=your_authentik_secret_key_here

# Allow default user to change username
AUTHENTIK_DEFAULT_USER_CHANGE_USERNAME=true

# Allow default user to change name
AUTHENTIK_DEFAULT_USER_CHANGE_NAME=true